@model ToDoApp.Models.ToDo
<form method="post" asp-action="DeletePost">
    <input asp-for="id" hidden />

    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 p1-3">Delete Task</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="name"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="name" disabled class="form-control" />
                    </div>


                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="body"></label>
                    </div>
                    <div class="col-4">
                        <textarea rows="4" cols="50" asp-for="body" disabled class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="status"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="status" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}